#:set background_color [0.121, 0.117, 0.121, 1.0]
#:set line_color [0.227, 0.223, 0.227, 1.0]
#:set line_selected_color [0, 1, 1, 1]
#:set label_secundary_color [1, 1, 1, 0.6]

<CustomButton>:
    size_hint_y: None
    height: dp(30)
    background_color: [0.0, 0.0, 0.0, 0.0]

    canvas.before:
        Color:
            rgba: (0, 0 , 0, 0) if not self.is_hovered else line_selected_color
        RoundedRectangle:
            size: self.size[0] + dp(2), self.size[1] + dp(2)
            pos: self.pos[0] - dp(1), self.pos[1] - dp(1)
            radius: [dp(5),]
        
        Color:
            rgba: line_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(5),]