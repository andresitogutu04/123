#:set background_color [0.298, 0.298, 0.298, 1.0]
#:set background_color_2 [0.227, 0.223, 0.227, 1.0]
#:set background_color_3 [0.121, 0.117, 0.121, 1.0]


<IntInput@TextInput>:
    input_filter: 'int'
    multiline: False
    background_color: [0, 0, 0, 0.5]
    foreground_color: [1, 1, 1, 1]

<CustomProperty>
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)

    Label:
        text: root.name
        font_size: '15sp'
    

<CustomIntProperty>:
    BoxLayout:
        orientation: 'horizontal'

        Slider:
            id: int_slider
            min: root.min_value
            max: root.max_value
            value: root.min_value
            size_hint_x: 0.7
            on_value: root.set_property_value(self.value)
        
        IntInput:
            id: int_textinput
            size_hint_x: 0.3
            on_text: root.set_property_value(self.text)


<MainLayout>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: background_color_3
        Rectangle:
            size: self.size
            pos: self.pos
    
    Label:
        text: root.title
        font_size: '17sp'
        size_hint_y: None
        height: dp(40)

        canvas.before:
            Color:
                rgba: background_color_2
            Line:
                rectangle: self.x, self.y, self.width, self.height
                width: dp(1)

    BoxLayout:
        id: properties_layout_container
        orientation: 'vertical'
        spacing: dp(10)
        size_hint_y: 0.8
        
        Label:
            text: 'Properties'
            font_size: '16sp'
            size_hint_y: None
            height: dp(20)

        BoxLayout:
            id: properties_layout
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(10)

            canvas.before:
                Color:
                    rgba: background_color_2
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: dp(1)

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.2
        spacing: dp(10)
        
        Label:
            text: 'Result'
            font_size: '16sp'
            size_hint_y: None
            height: dp(20)
        
        BoxLayout:
            orientation: 'vertical'
            id: result_layout

            canvas.before:
                Color:
                    rgba: background_color_2
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: dp(1)
            
