#:set background_color [0.298, 0.298, 0.298, 1.0]


<IntInput@TextInput>:
    input_filter: 'int'
    multiline: False
    background_color: [0, 0, 0, 0.5]
    foreground_color: [1, 1, 1, 1]

<CustomProperty>
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)

    Label:
        text: root.name
        font_size: '15sp'

<CustomIntProperty>:
    BoxLayout:
        orientation: 'horizontal'

        Slider:
            id: int_slider
            min: root.min_value
            max: root.max_value
            value: root.min_value
            size_hint_x: 0.7
            on_value: root.set_property_value(self.value)
        
        IntInput:
            id: int_textinput
            size_hint_x: 0.3
            on_text: root.set_property_value(self.text)


<MainLayout>:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: background_color
        Rectangle:
            size: self.size
            pos: self.pos