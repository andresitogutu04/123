

<CustomProperty>
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)
    
    canvas.before:
        Color:
            rgba: (1, 0, 0, 0.8) if root.error else (0, 0, 0, 0)
        Line:
            rounded_rectangle: [self.x - dp(5), self.y - dp(5), self.width + dp(10), self.height + dp(10), dp(10), dp(10)]
            width: dp(1)

    BoxLayout:
        id: property_info_layout
        orientation: 'horizontal'

        Label:
            text: root.error if root.error else root.name
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            size_hint_x: 0.7
            color: [1, 1, 1, 1] if not root.error else [1, 0, 0, 0.8]

<CustomIntProperty>:
    BoxLayout:
        id: numeric_layout
        orientation: 'horizontal'

        Slider:
            id: int_slider
            min: root.min_value
            max: root.max_value
            value: root.min_value
            size_hint_x: 0.7
            on_value: root.set_property_value(self.value)
        
        TextInput:
            id: int_textinput
            size_hint_x: 0.3
            input_filter: 'int' if root.int_mode else 'float'
            multiline: False
            background_color: [0, 0, 0, 0.5]
            foreground_color: [1, 1, 1, 1]
            on_text: root.set_property_value(self.text)

<CustomStrProperty>:
    TextInput:
        id: str_textinput
        text: ""
        password: root.password_mode
        multiline: False
        background_color: [0, 0, 0, 0.5]
        foreground_color: [1, 1, 1, 1]
        on_text: root.set_property_value(self.text)

<CustomBoolProperty>:
    BoxLayout:
        orientation: 'horizontal'

        Widget:

        Switch:
            id: bool_switch
            active: True
            size_hint_x: None
            width: dp(82)
            on_active: root.set_property_value(self.active)

<CustomColorProperty>:
    Widget:
        id: color_widget
        canvas.before:
            Color:
                rgba: root.color
            RoundedRectangle: 
                size: self.size
                pos: self.pos
                radius: [dp(5), dp(5), dp(5), dp(5)]

<CustomListProperty>:
    Spinner:
        id: list_spinner
        text: ""
        values: root.values
        on_text: root.set_property_value(self.text)

<CustomFileProperty>:
    CustomButton:
        id: file_button
        text: ""
        on_press: root.open_file_dialog()

<CustomFolderProperty>:
    CustomButton:
        id: folder_button
        text: ""
        on_press: root.open_folder_dialog()